{
  "name": "root",
  "private": true,
  "scripts": {
    "build:lib": "yarn workspaces foreach -Rpt --from '{@oicl/openbridge-webcomponents,@oicl/openbridge-webcomponents-vue,@oicl/openbridge-webcomponents-react}' run build",
    "format:all": "yarn workspaces foreach -Ap run format",
    "release": "yarn workspaces foreach -Ap run release --workspaces && release-it"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "packageManager": "yarn@4.1.1",
  "devDependencies": {
    "@release-it/bumper": "^6.0.1",
    "release-it": "^17.1.1"
  }
}